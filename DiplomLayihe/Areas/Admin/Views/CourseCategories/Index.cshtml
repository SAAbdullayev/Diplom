@model IEnumerable<CourseCategories>
@{
    ViewData["Title"] = "Index";
}

<h1>Courses</h1>
<p>
    <a class="createbtn" asp-action="Create" style="color: white;">
        Create
    </a>
</p>

@section css {
    <style>
        .image {
            width: 120px;
            height: auto;
        }

    </style>
}

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Photo</th>
                        <th scope="col">Name</th>
                        <th scope="col">Lessons</th>
                        <th scope="col">Level</th>
                        <th scope="col">Price</th>
                        <th scope="col">Category</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr data-entity-id="@item.Id">
                        <td>
                            <img class="image" src="~/photouploads/images/@item.CoursePhoto" />
                        </td>
                        <td>
                            @item.CourseName.HtmlToPlainText().ToEllipse(10)
                        </td>
                        <td>
                            @item.Lessons
                        </td>
                        <td>
                            @item.Level
                        </td>
                        <td>
                            @item.Price
                        </td>
                        <td>
                            @item.CourseCategory
                        </td>
                        <td class="atributlar">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="editbtn">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id" class="detailbtn">Details</a> |
                            <a onclick="removeEntity(event, @item.Id, '@item.CourseName')" class="deletebtn">Delete</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>