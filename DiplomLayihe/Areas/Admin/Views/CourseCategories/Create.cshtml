@model CourseCategoriesCreateCommand
@{
    ViewData["Title"] = "Create";
}


@section css {
    <style>
        .ck-content {
            min-height: 250px;
        }

        .photo-viewer {
            width: 200px;
            height: 100px;
            background-position: center;
            background-size: cover;
            object-fit: cover;
            background-image: url('/photouploads/images/file-uploads1.jpg');
            cursor: pointer;
        }

        #file {
            display: none;
        }
    </style>
}

<h1>Create</h1>

<h4>Companies</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label for="file1" class="control-label">Sekil</label>
            <div class="form-group">
                <label class="photo-viewer" id="file-viewer" for="file" class="control-label"></label>
                <input name="file" id="file" type="file" class="form-control" onchange="readFile(this)" />
                <span asp-validation-for="CoursePhoto" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CourseName" class="control-label"></label>
                <input asp-for="CourseName" class="form-control" />
                <span asp-validation-for="CourseName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseDetail" class="control-label"></label>
                <input asp-for="CourseDetail" class="form-control" />
                <span asp-validation-for="CourseDetail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseStructure" class="control-label"></label>
                <input asp-for="CourseStructure" class="form-control" />
                <span asp-validation-for="CourseStructure" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EntryRequirment" class="control-label"></label>
                <input asp-for="EntryRequirment" class="form-control" />
                <span asp-validation-for="EntryRequirment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Placements" class="control-label"></label>
                <input asp-for="Placements" class="form-control" />
                <span asp-validation-for="Placements" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lessons" class="control-label"></label>
                <input asp-for="Lessons" class="form-control" />
                <span asp-validation-for="Lessons" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Length" class="control-label"></label>
                <input asp-for="Length" class="form-control" />
                <span asp-validation-for="Length" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Level" class="control-label"></label>
                <input asp-for="Level" class="form-control" />
                <span asp-validation-for="Level" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseCategory" class="control-label"></label>
                <input asp-for="CourseCategory" class="form-control" />
                <span asp-validation-for="CourseCategory" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:flex; flex-direction:column;">
                <label name="Tags" class="control-label">Tags</label>
                <select class="control-label tags" name="tagIds" multiple id="tags" asp-items="ViewBag.Tags">
                </select>
            </div>
            <div class="form-group" style="display:flex; flex-direction:column;">
                <label name="teacherIds" class="control-label">Teachers</label>
                <select class="control-label tags" name="teacherIds" multiple id="tags" asp-items="ViewBag.Teachers">
                </select>
            </div>



            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>