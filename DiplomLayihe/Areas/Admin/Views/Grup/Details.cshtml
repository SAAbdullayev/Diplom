@model Gruplar

@{
    ViewData["Title"] = "Details";
}



<h1>Details</h1>

<div>
    <h4>Qruplar</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Ixtisas
        </dt>
        <dd class="col-sm-10">

            @foreach (var item in @ViewBag.Ixtisas)
            {
                if (item.Id == Model.ParentIxtisasId)
                {
                    @item.Name
                }
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="editbtn">Edit</a> |
    <a class="btn btn-grd-inverse" asp-action="Index">Back to List</a>
</div>
