@model PlanAndPricingEditCommand

@{
    ViewData["Title"] = "Edit";
}


@section css {
    <style>
        .ck-content {
            min-height: 250px;
        }

        .photo-viewer {
            width: 200px;
            height: 100px;
            background-position: center;
            background-size: cover;
            object-fit: cover;
            background-image: url('/photouploads/images/file-uploads1.jpg');
            cursor: pointer;
        }

        #file {
            display: none;
        }
    </style>
}


<h1>Edit</h1>

<h4>Plan and Pricing</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>




            <div class="form-group">
                <label asp-for="PlanType" class="control-label"></label>
                <input asp-for="PlanType" class="form-control" />
                <span asp-validation-for="PlanType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PlanPrice" class="control-label"></label>
                <input asp-for="PlanPrice" class="form-control" />
                <span asp-validation-for="PlanPrice" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PlanTime" class="control-label"></label>
                <input asp-for="PlanTime" class="form-control" />
                <span asp-validation-for="PlanTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
