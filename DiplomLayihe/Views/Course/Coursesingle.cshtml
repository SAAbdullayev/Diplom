                            </li>
                        </ul>
                    </div>


                    <div class="teacherbar">
                        <h2>Teachers</h2>

                        @foreach (var item in Model.CourseCategories.SelectMany(cp=>cp.CourseTeachers))
                        {
                            <div class="aboutteacher">
                                <div class="teacherimg"><img src="~/photouploads/images/@item.Teachers.TeacherPhoto" alt="" /></div>

                                <div class="teacherwriting">
