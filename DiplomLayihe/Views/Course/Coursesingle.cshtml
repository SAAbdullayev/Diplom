@model CourseViewModel





<section class="banner">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="bannermain">
                    <div class="bannerleft">
                        <h3>BLOG DETAIL</h3>
                    </div>

                    <div class="bannerright">
                        <ul>
                            <li><a href="#">Home</a></li>
                            <li><i class="fa-solid fa-angle-right"></i></li>
                            <li><a href="#">Course Detail</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<section class="coursedetails">
    <div class="container">
        <div class="row">
            <div class="col-md-8  col-sm-12">
                <div class="coursesdetailcontainer">


                    @foreach (var item in Model.CourseCategories)
                    {
                        <div class="coursesdetailheading">
                            <h4>@item.CourseName</h4>
                        </div>

                        <ul class="coursedetailfonts">
                            <li><i class="fa fa-user"></i><a href="#">John Doe</a></li>
                            <li><i class="fa-solid fa-clock"></i>@item.CreatedDate.ToString("MMM d, yyyy")</li>
                            <li><i class="fa fa-bookmark"></i><a href="#">@item.CourseCategory</a></li>
                        </ul>

                        <div class="coursedetailimg">
                            <div class="detailimg">
                                <img src="~/photouploads/images/@item.CoursePhoto" alt="" />
                            </div>
                        </div>


                        <div class="detailtabs">


                            <div id="tabs">
                                <div class="tab whiteborder">Course Details</div>
                                <div class="tab">Course Structure</div>
                                <div class="tab">Entry Requirment</div>
                                <div class="tab">Placements</div>





                                <div class="tabContent">
                                    <div class="coursetabdetail">
                                        <div class="coursetabheading">
                                            <h3>Course Details</h3>
                                        </div>
                                        <p>@item.CourseDetail</p>
                                    </div>

                                </div>


                                <div class="tabContent">
                                    <div class="coursetabdetail">
                                        <div class="coursetabheading">
                                            <h3>COURSE STRUCTURE</h3>
                                        </div>
                                        <p>@item.CourseStructure</p>
                                    </div>


                                </div>
                                <div class="tabContent">

                                    <div class="coursetabdetail">
                                        <div class="coursetabheading">
                                            <h3>ENTRY REQUIRMENT</h3>
                                        </div>
                                        <p>
                                            @item.EntryRequirment
                                        </p>
                                    </div>


                                </div>
                                <div class="tabContent">

                                    <div class="coursetabdetail">
                                        <div class="coursetabheading">
                                            <h3>PLACEMENTS</h3>
                                        </div>
                                        <p>
                                            @item.Placements
                                        </p>
                                    </div>



                                </div>
                            </div>



                            <div class="coursegallery">
                                <div class="coursegalleryheading">
                                    <h6>Course Gallery</h6>
                                </div>
                                <div class="row">



                                    <div class="col-md-4 col-sm-6 col-xs-12 col-12 ">
                                        <div class="coursecardimg">
                                            <img src="~/images/extra-images/blog_detail1.jpg" alt="" />
                                            <a href="#"><i class="fa fa-search"></i></a>
                                        </div>
                                    </div>

                                    <div class="col-md-4 col-sm-6 col-xs-12 col-12 ">
                                        <div class="coursecardimg">
                                            <img src="~/images/extra-images/blog_detail2.jpg" alt="" />
                                            <a href="#"><i class="fa fa-search"></i></a>
                                        </div>
                                    </div>

                                    <div class="col-md-4 col-sm-6 col-xs-12 col-12 ">
                                        <div class="coursecardimg">
                                            <img src="~/images/extra-images/blog_detail3.jpg" alt="" />
                                            <a href="#"><i class="fa fa-search"></i></a>
                                        </div>
                                    </div>

                                    <div class="col-md-4 col-sm-6 col-xs-12 col-12 ">
                                        <div class="coursecardimg">
                                            <img src="~/images/extra-images/blog_detail4.jpg" alt="" />
                                            <a href="#"><i class="fa fa-search"></i></a>
                                        </div>
                                    </div>
                                </div>
                                <p class="margin-bottom">Class aptent taciti sociosqu ad litora torquent per conubia nostra, per inceptos himenaeos. Mauris in erat justo. Nullam ac urna eu felis dapibus condimentum sit amet a augue. </p>
                            </div>
                        </div>
                    }



                    <div class="blogauthor">
                        <div class="authorimg"><img src="~/images/extra-images/author.jpg" alt=""></div>
                        <div class="blogaboutauthor">
                            <h6>
                                <a href="#">Alfred Marshal</a>
                            </h6>
                            <p>This is Photoshop's version  of Lorem Ipsum. Proin gravida nibh vel velit auctor aliquet. Aenean sollicitudin, lorem quis bibendum auctor, nisi elit consequat ipsum quis bibendum.</p>
                            <ul class="blogauthorsocial">
                                <li><a href="#"><i class="fa-brands fa-facebook-f"></i></a></li>
