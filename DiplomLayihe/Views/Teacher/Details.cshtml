@model Teachers


<section class="banner">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="bannermain">
                    <div class="bannerleft">
                        <h3>OUR TEACHER</h3>
                    </div>

                    <div class="bannerright">
                        <ul>
                            <li><a href="#">Home</a></li>
                            <li><i class="fa-solid fa-angle-right"></i></li>
                            <li><a href="#">Our Teacher</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<section class="teacherportfolio">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-7">
                <div class="teacherbio">
                    <div class="teacherlogo">
                        <span><i class="fa-solid fa-book-open"></i></span>
                        <h3>Teacher Profile</h3>
                    </div>

                    <div class="teacherwriting">
                        <h4>@Model.TeacherName</h4>
                        <ul>
                            <li><i class="fa-solid fa-envelope"></i><a href="#">@Model.TeacherEmail</a></li>
                            <li><i class="fa fa-calendar"></i>@Model.CreatedDate.ToString("MMM d, yyyy")</li>
                            <li><i class="fa fa-phone"></i>@Model.TeacherNumber</li>
                        </ul>
                        <p>@Model.AboutTeacher</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-5">
                <div class="teachercontact">
                    <div class="teacherimg">
                        <img src="~/photouploads/images/@Model.TeacherPhoto" alt="" />
                        <span>
                            <ul>
                                <li><a href="#"><i class="fa-brands fa-facebook-f"></i></a></li>
                                <li><a href="#"><i class="fa-brands fa-twitter"></i></a></li>
                                <li><a href="#"><i class="fa-brands fa-skype"></i></a></li>
                                <li><a href="#"><i class="fa fa-rss"></i></a></li>
                            </ul>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<section class="counter">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="countercard">
                    <span><i class="fa-solid fa-user-group"></i></span>
                    <h3>94,532</h3>
                    <h5>FOREIGN FOLLOWERS</h5>
                </div>
            </div>
            <div class="col-md-3">
                <div class="countercard">
                    <span><i class="fa-solid fa-book"></i></span>
                    <h3>11,223</h3>
                    <h5>CLASSES COMPLETE</h5>
                </div>
            </div>
            <div class="col-md-3">
                <div class="countercard">
                    <span><i class="fa-solid fa-trophy"></i></span>
                    <h3>282,673</h3>
                    <h5>STUDENTS ENROLLED</h5>
                </div>
            </div>
            <div class="col-md-3">
                <div class="countercard">
                    <span><i class="fa-solid fa-person-chalkboard"></i></span>
                    <h3>370</h3>
                    <h5>CERTIFIED TEACHERS</h5>
                </div>
            </div>
        </div>
    </div>
</section>



